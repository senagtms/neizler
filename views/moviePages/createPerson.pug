extends ../layout/onlinePageLayout

block content
    section.vh-100(style='background-color: #f4f5f7;')
        .container-app
            .row.pt-5
                .col-md-3
                    include ../partials/adminMenu
                .col-md-9
                    form#createPerson
                        .row.mb-3
                            label.col-sm-2.col-form-label İsim
                            .col-sm-10
                                input.form-control(type='text',name="name")
                        .row.mb-3
                            label.col-sm-2.col-form-label Soyisim
                            .col-sm-10
                                input.form-control(type='text',name="surName")
                        .row.mb-3
                            label.col-sm-2.col-form-label Meslek
                            .col-sm-10
                                select.form-select(name="personType" id="personType")
                                    option(value='1') Yönetmen
                                    option(value='2') Aktör
                                    option(value='3') Personel
                        .row.mb-3
                            label.col-sm-2.col-form-label Cinsiyet
                            .col-sm-10.d-flex
                                .form-check
                                    input#flexRadioDefault1.form-check-input(type='radio' name='gender' value='1')
                                    label.form-check-label(for='flexRadioDefault1')
                                        | Erkek
                                .form-check.ms-4
                                    input#flexRadioDefault2.form-check-input(type='radio' name='gender' checked='' value='2')
                                    label.form-check-label(for='flexRadioDefault2')
                                        | Kadın

                        button.btn.btn-primary(type='submit') Kaydet
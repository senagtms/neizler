extends ../layout/onlinePageLayout

block content
    section
        .container-app
            .row.pt-5
                .col-md-3
                    include ../partials/adminMenu
                .col-md-9
                    table.table
                        thead
                            tr
                                th(scope='col') Adı
                                th(scope='col') Soyadı
                                th(scope='col') Meslek
                                th(scope='col') Cinsiyet
                        tbody
                            each val in personData
                                tr

                                    td= val.name
                                    td= val.surName
                                    if val.personType === 1
                                        td Yönetmen
                                    else if val.personType === 2
                                        td Aktör
                                    else
                                        td Personel
                                    if val.gender === 1
                                        td Erkek
                                    else
                                        td Kadın
